" CHECK THIS DIRECTORY INTO GITHUB!

set guifont=Monaco:h12
set guioptions-=T
set number
set columns=120
set lines=65
let mapleader=","

set shiftwidth=2  "number of spaces to use in each autoindent step
set tabstop=2     "two tab spaces
set softtabstop=2 "number of spaces to skip or insert when <BS>ing or <Tab>ing
set expandtab     "spaces instead of tabs for better cross-editor compatibility

set autoindent    "keep the indent when creating a new line
set smarttab      "use shiftwidth and softtabstop to insert or delete (on <BS>) blanks
set cindent       "recommended seting for automatic C-style indentation
set wrap          "wrap entire words, don't break them; much easier to read!
set laststatus=2  "show status line

" Pathogen
call pathogen#runtime_append_all_bundles()

" MakeGreen
autocmd BufNewFile,BufRead *_spec.rb compiler rspec
map <Leader>g <Plug>MakeGreen " change from <Leader>t to <Leader>g

" Gist
let g:gist_detect_filetype = 1
let g:gist_open_browser_after_post = 1

" SnipMate
:filetype plugin on

" NERDTree
map <leader>n :NERDTreeToggle<CR>
let NERDTreeQuitOnOpen=1

" VIMRC ACCESS
" EDIT
map <leader>r :e ~/.vim/default_vimrc<CR>
" RELOAD
map <silent> <leader>R :source ~/.vimrc<CR>:filetype detect<CR>:exe ":echo 'vimrc reloaded'"<CR>

" COMMAND-T CONFIG http://www.vim.org/scripts/script.php?script_id=3025
set wildignore+=vendor/**,tmp/**,log/**

if has("autocmd")
  filetype indent on
end

" FUGITIVE
" Add branch name to status line
set statusline=%<%f\ %h%m%r%{fugitive#statusline()}%=%-14.(%l,%c%V%)\ %P
